[Unit]
Description=Topic Tracker FastAPI Backend
After=network.target

[Service]
User=deploy
WorkingDirectory=/home/deploy/topic-tracker
ExecStart=/home/deploy/topic-tracker/venv/bin/uvicorn Backend.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5
EnvironmentFile=/home/deploy/topic-tracker/Backend/.env

[Install]
WantedBy=multi-user.target
